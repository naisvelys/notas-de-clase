class HelloWorld {
    public static void main(String[] args) {
        
        Scanner teclado = new Scanner(System.in);
        int x;
        do{
            System.out.print("Escribe un numero: ");
        x = teclado.nextInt();
        if (x >= 0){
        System.out.println("El numero es positivo");
        }
        else {
            System.out.println("Fin de la programacion");
        }
        } while (x >= 0);
    }
}

       
        
