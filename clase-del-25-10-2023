import java.util.Scanner;

class HelloWord {
    public static void main(String[] args) {
        int a, b;
        Scanner scan = new Scanner(System.in);
        System.out.println("Escribe un numero 1: ");
        a = scan.nextInt();
        System.out.println("Escribe el numero 2");
        b = scan.nextInt();

        System.out.println("La suma de " + a + " y " + b + " es: " + add(a, b));
        System.out.println("La resta de " + a + " y " + b + " 3es: " + sub(a, b));
        System.out.print("La multiplicacion de " + a + " y " + b + " es: " + mult(a, b));
    }

    public static int add(int a, int b){
        int c = a + b;
        return c;
    }

    public static int sub(int a, int b){
        int c = a + b;
        return c;
    }

    public static int mult (int a, int b){
        int c = a * b;
        return c;
    }
}
